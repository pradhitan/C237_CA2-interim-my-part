<!DOCTYPE html>
<html>
<head>
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Register</h1>

        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-danger">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
        <% } %>

        <form action="/register" method="POST" class="mt-4">

            <!-- Username -->
            <div class="form-group mb-3">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" class="form-control" required
                <% if (formData && (!errorFields || !errorFields.includes('username'))) { %>
                    value="<%= formData.username %>"
                <% } %>>
            </div>

            <!-- Email -->
            <div class="form-group mb-3">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" class="form-control" required
                <% if (formData && (!errorFields || !errorFields.includes('email'))) { %>
                    value="<%= formData.email %>"
                <% } %>>
            </div>

            <!-- Password -->
            <div class="form-group mb-3">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" class="form-control" required>
                <small class="text-muted">Must be more than 5 characters</small>
            </div>

            <!-- SwimSafer Level -->
            <div class="form-group mb-3">
                <label for="current_swimsafer_level">Current SwimSafer Level:</label>
                <input type="number" id="current_swimsafer_level" name="current_swimsafer_level" class="form-control" required
                <% if (formData && (!errorFields || !errorFields.includes('current_swimsafer_level'))) { %>
                    value="<%= formData.current_swimsafer_level %>"
                <% } %>>
            </div>

            <!-- Contact -->
            <div class="form-group mb-3">
                <label for="contact">Contact Number:</label>
                <input type="text" id="contact" name="contact" class="form-control" maxlength="10" required
                <% if (formData && (!errorFields || !errorFields.includes('contact'))) { %>
                    value="<%= formData.contact %>"
                <% } %>>
            </div>

            <!-- Role -->
            <div class="form-group mb-4">
                <label for="role">Role:</label>
                <select id="role" name="role" class="form-control" required>
                    <option value="">-- Select Role --</option>
                    <option value="user"
                        <% if (formData && formData.role === 'user' && (!errorFields || !errorFields.includes('role'))) { %> selected <% } %>>
                        User
                    </option>
                    <option value="admin"
                        <% if (formData && formData.role === 'admin' && (!errorFields || !errorFields.includes('role'))) { %> selected <% } %>>
                        Admin
                    </option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</body>
</html>


<!-- If user keys in any wrong data in a column, the data in that column is erased but the rest of the columns with the correct data is kept -->